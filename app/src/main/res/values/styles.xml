<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBold32">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/dimen_32sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextMedium22">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/dimen_22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextMedium16">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextRegular16">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextRegular12">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="BottomNavigationMenu" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemTextAppearanceActive">@style/TextRegular12</item>
        <item name="itemTextAppearanceInactive">@style/TextRegular12</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemPaddingTop">@dimen/dimen_8dp</item>
        <item name="itemPaddingBottom">@dimen/dimen_8dp</item>
    </style>

    <style name="NamesStyle" parent="TextMedium16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginHorizontal">@dimen/dimen_16dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
    </style>

    <style name="HeadStyle" parent="NamesStyle">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/dimen_32sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="ItemVacancyTypeSalaryStyle" parent="TextRegular16">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ItemVacancyNameStyle" parent="ItemVacancyTypeSalaryStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/dimen_22sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="HeaderInDetailsVacancyStyle" parent="TextMedium22">
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="HeaderWithArrowBackStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingVertical">@dimen/dimen_8dp</item>
        <item name="contentInsetStartWithNavigation">@dimen/dimen_0dp</item>
        <item name="navigationIcon">@drawable/arrow_back_24px</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/TextMedium22</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="boxStrokeColor">?attr/colorPrimaryVariant</item>
        <item name="boxBackgroundColor">@color/box_input_background</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="endIconDrawable">@drawable/arrow_forward_24px</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">?attr/colorOnPrimary</item>
        <item name="hintTextAppearance">@style/TextRegular16</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:paddingVertical">@dimen/dimen_20dp</item>
        <item name="android:textAppearance">@style/TextRegular16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:longClickable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>
    
    <style name="ButtonPrimaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">@dimen/dimen_17dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_17dp</item>
        <item name="android:paddingVertical">@dimen/dimen_20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextMedium16</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/dimen_12dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TransparentButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:layout_marginStart">@dimen/dimen_17dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_17dp</item>
        <item name="android:paddingVertical">@dimen/dimen_20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextMedium16</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="FilterSelectableTextStyle">
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/TextRegular16</item>
    </style>

    <style name="FilerArrowForwardButtonStyle">
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/arrow_forward_24px</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

    <style name="HintAppearance.Normal" parent="TextRegular16"/>
    <style name="HintAppearance.Small" parent="TextRegular12"/>
</resources>
